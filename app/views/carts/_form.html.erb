<%= form_with(model: cart, local: true) do |form| %>
  <% if cart.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(cart.errors.count, "error") %> prohibited this cart from being saved:</h2>

      <ul>
      <% cart.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :product_id %>
    <%= form.select :product_id, options_for_select(Product.all.collect{|key| [key.name, key.id]}), id: :cart_product_id %>
  </div>

  <%= form.hidden_field :customer_id, value: @customer%>

  <div class="field">
    <%= form.label :price %>
    <%= form.text_field :price, id: :cart_price %>
  </div>

  <div class="field">
    <%= form.label :unit %>
    <%= form.text_field :unit, id: :cart_unit %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
