<center>
  <h1>Log in</h1>
  <div class="card card-body" style="width: max-content">
    <div class="form-group">
      <%= form_tag sessions_path do %>
        <div class="form-group mt-4">
          <%= text_field_tag :email, params[:email], placeholder: "Username", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= password_field_tag :password, '', class: "form-control" %>
        </div>
        <%= submit_tag "Log in", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</center>